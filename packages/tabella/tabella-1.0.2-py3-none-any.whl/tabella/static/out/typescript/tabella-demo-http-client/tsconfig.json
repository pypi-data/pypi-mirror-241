
{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "module": "es2020",
    "rootDir": "src",
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "noUnusedParameters": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
